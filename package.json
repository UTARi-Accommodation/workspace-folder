{
    "name": "workspace-container",
    "version": "0.0.0",
    "author": "PoolOfDeath20",
    "license": "MIT",
    "scripts": {
        "install-scrapper": "cd scrapper && yarn",
        "install-client": "cd client && yarn",
        "install-server": "cd server && yarn",
        "start-scrapper": "cd scrapper && yarn start",
        "start-client": "cd client && yarn start",
        "start-server": "cd server && yarn start",
        "build-client": "cd client && yarn build",
        "build-server": "cd server && yarn build",
        "test-client": "cd client && yarn test",
        "test-server": "cd server && yarn test",
        "clean-scrapper": "cd scrapper && rm -rf node_modules",
        "clean-client": "cd client && rm -rf node_modules",
        "clean-server": "cd server && rm -rf node_modules",
        "total-clean-scrapper": "yarn clean-scrapper && rm yarn.lock",
        "total-clean-client": "yarn clean-client && rm yarn.lock",
        "total-clean-server": "yarn clean-server && rm yarn.lock",
        "install-all": "concurrently \"yarn install-scrapper\" \"yarn install-client\" \"yarn install-server\"",
        "install-dev": "yarn && yarn install-all",
        "build": "yarn install-all && concurrently \"yarn build-scrapper\" \"yarn build-client\" \"yarn build-server\"",
        "sync-start": "concurrently \"yarn start-client\" \"start-server\"",
        "sync-start-dev": "concurrently \"yarn start-client\" \"cd server && yarn start-dev\"",
        "clean": "concurrently \"rm -rf node_modules\" \"yarn clean-client\" \"yarn clean-server\" && yarn install-dev",
        "total-clean": "concurrently \"rm -rf node_modules\" \"yarn total-clean-scrapper\" \"yarn total-clean-client\" \"yarn total-clean-server\" && yarn install-dev"
    },
    "devDependencies": {
        "concurrently": "^6.2.2"
    }
}
